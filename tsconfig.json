{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "types": [
      "node",
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client"
    ],
    "paths": {
      "~*": ["./src/*"]
    },
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
