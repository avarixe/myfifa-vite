{
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "vite/client", "unplugin-vue-router/client"],
    "paths": {
      "~*": ["./src/*"]
    },
    "noEmit": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["*.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
